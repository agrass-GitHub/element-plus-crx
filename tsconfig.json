{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "allowJs": true,
    "maxNodeModuleJsDepth": 2,
    "types": ["element-plus/global"],
    "paths": {
      "@/*": ["./packages/*"]
    }
  },
  "include": [
    "env.d.ts",
    "global.d.ts",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "example/**/*.ts",
    "example/**/*.d.ts",
    "example/**/*.tsx",
    "example/**/*.vue",
    "global.ts"
  ],
  "exclude": ["node_modules", "tests/server", "dist"]
}
